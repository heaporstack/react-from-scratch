{
  "formDiv": {
    "display": "block",
    "width": "20%",
    "minWidth": "30rem",
    "marginLeft": "auto",
    "marginRight": "auto",
    "backgroundColor": "#fff",
    "borderRadius": "0.375rem",
    "borderWidth": "1px",
    "borderStyle": "solid",
    "borderColor": "#ddd",
    "paddingLeft": "2rem",
    "paddingRight": "2rem",
    "justifyContent": "center"
  },
  "title": {
    "display": "block",
    "fontSize": "2rem",
    "color": "#374152",
    "fontWeight": "bold",
    "margin": "2rem 0 2rem 0"
  },
  "label": {
    "display": "block",
    "fontSize": "0.9rem",
    "lineHeight": "1.25rem",
    "fontWeight": "bold",
    "color": "#374152",
    "margin": "0 0 0.2rem 0"
  },
  "input": {
    "display": "block",
    "width": "100%",
    "borderRadius": "0.375rem",
    "borderWidth": "1px",
    "borderStyle": "solid",
    "borderColor": "#ddd",
    "margin": "0 0 1rem 0",
    "padding": "0.5rem 0.75rem 0.5rem 0.75rem",
    "boxSizing": "border-box",
    "outline": "none"
  },
  "forgottenPassword": {
    "display": "block",
    "color": "#4f46e5",
    "fontWeight": "bold",
    "backgroundColor": "#fff",
    "border": "none",
    "marginTop": "1rem"
  },
  "submit": {
    "display": "block",
    "width": "100%",
    "color": "#fff",
    "fontWeight": "bold",
    "backgroundColor": "#4f46e5",
    "border": "none",
    "margin": "1rem 0 1rem 0",
    "padding": "0.5rem 0.75rem 0.75rem 0.5rem",
    "borderRadius": "0.375rem"
  }
}
